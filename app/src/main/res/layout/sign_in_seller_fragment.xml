<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".seller.signin.SignInSellerFragment"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/sellersignin"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller Sign In Form"
                android:textColor="#2E7D32"
                android:textSize="27sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edit_email_sign_in_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edit_password_sign_in_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/text_sign_up_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="have an account, Sign Up"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:background="@android:color/darker_gray"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/txt_sign_in_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="#159EC0"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                />

        </LinearLayout>


    </LinearLayout>

</layout>